{
	"plugins": ["prettier-plugin-twig-melody"],
	"printWidth": 120,
	"tabWidth": 6,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"trailingComma": "es5",
	"overrides": [
		{
			"files": "*.twig",
			"options": {
				"parser": "melody",
				"printWidth": 120,
				"tabWidth": 4,
				"useTabs": true
			}
		},
		{
			"files": ["*.js", "*.jsx"],
			"options": {
				"parser": "babel",
				"printWidth": 120,
				"tabWidth": 4,
				"useTabs": true,
				"semi": true,
				"singleQuote": false
			}
		}
	]
}
