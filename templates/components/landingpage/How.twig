<section id="how-it-works" class="py-20 md:py-32">
	{% set steps = [
		{
			number: '1',
			title: 'Create Tickets',
			description: 'Submit new tickets with detailed information, attachments, and priority levels.',
		},
		{
			number: '2',
			title: 'Assign & Prioritize',
			description: 'Automatically assign tickets to team members and set priorities based on impact.',
		},
		{
			number: '3',
			title: 'Collaborate',
			description: 'Add comments, updates, and collaborate with your team in real-time.',
		},
		{
			number: '4',
			title: 'Resolve & Track',
			description: 'Mark tickets as resolved and track metrics to improve your workflow.',
		}
	] %}

	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">How It Works</h2>
			<p class="text-lg text-gray-600 max-w-2xl mx-auto">
				Get started in four simple steps and start managing tickets like a pro.
			</p>
		</div>

		<div class="grid md:grid-cols-4 gap-8">
			{% for step in steps %}
				<div
					class="relative">
					<!-- Connector line (only show if not last item) -->
					{% if loop.index < steps|length %}
						<div class="hidden md:block absolute top-12 left-1/2 w-full h-0.5 bg-gray-200"></div>
					{% endif %}

					<div class="relative z-10">
<div class="w-24 h-24 bg-primary text-white rounded-full flex items-center justify-center text-3xl font-bold mb-6 mx-auto">

							{{ step.number }}
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-2 text-center">{{ step.title }}</h3>
						<p class="text-gray-600 text-center">{{ step.description }}</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
